@model WebApplication2.Models.ViewModels.LoginViewModel
@{
    Layout = null;
}

<table style="width:40%" >
    <tr class="col-sm-push-1">
        <th>#</th>
        <th>類別</th>
        <th>日期</th>
        <th>金額</th>
    </tr>
    @for (int i = 0; i < Model.Tables.Count; i++)
    {
        <tr>
            <td>@Model.Tables[i].Sn @Html.HiddenFor(m => m.Tables[i].Sn)</td>
            <td>@Model.Tables[i].Class @Html.HiddenFor(m => m.Tables[i].Class)</td>
            <td>@Model.Tables[i].Date @Html.HiddenFor(m => m.Tables[i].Date)</td>
            <td>@Model.Tables[i].Money @Html.HiddenFor(m => m.Tables[i].Money)</td>
        </tr>
    }
</table>